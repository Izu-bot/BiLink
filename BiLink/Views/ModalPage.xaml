<?xml version="1.0" encoding="UTF-8"?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="BiLink.Views.ModalPage">

    <Border
        BackgroundColor="White"
        WidthRequest="300"
        HeightRequest="200"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        StrokeShape="RoundRectangle 20">

        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Adicionar Link" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" />

            <Entry Placeholder="URL do link" />

            <Button Text="Salvar" />
            <Button Text="Cancelar" BackgroundColor="#E0E0E0" TextColor="Black"/>
        </VerticalStackLayout>

    </Border>
</toolkit:Popup>